<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SettingsText">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TabLayout">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="NavigationView">
        <item name="android:background">@color/icons</item>
    </style>

    <style name="NavigationHeaderText">
        <item name="android:textColor">@color/icons</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TitleText">
        <item name="android:fontFamily">"sans-serif-medium"</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="SubtitleText">
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>
</resources>
